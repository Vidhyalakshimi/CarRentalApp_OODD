<p id="notice"><%= notice %></p>

<%if @reservations.any?%>
<h1>Reservations</h1>

<table>
  <thead>
    <tr>
      <th>Checkout time</th>
      <th>Return time</th>
      <th>Customer</th>
      <th>Car</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.checkout_time %></td>
        <td><%= reservation.return_time %></td>
        <td><%= reservation.customer.name %></td>
        <td>
          Model: <%= reservation.car.model %>;
          <br>Plate number:<%= reservation.car.license_plate_number %>
        </td>
        <td>
          <% if Time.now > reservation.return_time %>
            Completed
              <% else %>
          Active
          <%end%>
        </td>
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <%if false %>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%end%>
<% if false %>
<%= link_to 'New Reservation', new_reservation_path %>
<% end %>
